<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/worker_item_layout"
    xmlns:tools="http://schemas.android.com/tools">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/worker_name"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="20dp"
    android:textSize="30dp"
    tools:text="aman"/>
    <LinearLayout
        android:layout_marginHorizontal="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/joining_date_layout">
        <TextView
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JoiningDate"/>
        <TextView
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:text="12-jan-2018"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/joindate_text_view"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leaving_date_layout">
        <TextView
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LeavingDate"/>
        <TextView
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:text="12-jan-2018"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leaving_text_view"/>
    </LinearLayout>
</LinearLayout>