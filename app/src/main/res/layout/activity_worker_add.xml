<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:layout_alignParentTop="true"
        android:id="@+id/heading_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="20sp"
        android:layout_margin="20dp"/>
    <EditText
        android:id="@+id/name_edit_text"
        android:layout_below="@id/heading_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:hint="Worker Name" />
    <LinearLayout
        android:layout_below="@id/name_edit_text"
        android:id="@+id/joining_date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Joining date"
            android:textSize="20sp"
            android:layout_marginRight="20dp"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/joining_date_text_view"
            tools:text="12-June-2019"/>
        <ImageButton
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_add_circle_black_24dp"
            android:id="@+id/add_joining_date"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/joining_date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leaving date"
            android:textSize="20sp"
            android:layout_marginRight="20dp"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leaving_date_text_view"
            tools:text="12-June-2019"/>
        <ImageButton
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_add_circle_black_24dp"
            android:id="@+id/add_leaving_date"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        android:id="@+id/save_worker"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"/>
</RelativeLayout>